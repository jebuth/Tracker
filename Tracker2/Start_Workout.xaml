<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Tracker2.Start_Workout"
    Title="Routines"
	Padding="0, 20, 0, 0">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon = "plus.png" Order = "Primary" Clicked="New_Routine_Clicked"/>

    </ContentPage.ToolbarItems>
    
    <StackLayout Padding="12, 0, 12, 12">
        <!-- ListView of available routines -->
        <ListView x:Name = "Routines_List_View" ItemSelected="Handle_ItemSelected"></ListView>
       <!-- <Button Clicked="New_Routine_Clicked" Text="New Routine" TextColor="White" BackgroundColor="#00B9FF" BorderWidth="1" BorderColor="Black"/>-->
       <StackLayout> <Button Text="clear" Clicked="Delete_Clicked"/></StackLayout>
    </StackLayout>
        
</ContentPage>
